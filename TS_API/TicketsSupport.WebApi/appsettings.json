{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TS_Database;Trusted_Connection=True;Encrypt=False"
  },
  "JWT": {
    "Issuer": "TicketSupportAPIServer",
    "Audience": "TicketSupportClient",
    "Key": "Lc4kZ6MhFtRLtFHS6XnJXFoFuCDqDs6hAiGWfGereVaYaczpq2ch8Sy4xvyx5itT", //64 bytes password
    "ExpirationMin": 15,
    "ExpirationRefreshTokenMin": 1440, //24 Hours
    "TokenType": "Bearer"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Temp/Logs/log-ApiTicketsSupport-.txt",
          "rollingInterval": "Day",
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "TicketsSupport"
    }
  },
  "Localitation": {
    "defaultLanguage": "es"
  }
}
